<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER_RIGHT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxusuarios.LoginController" style="-fx-background-color: blue;" >
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="0"/>
    </padding>
    <HBox alignment="CENTER" spacing="10.0">
        <Label textFill="white"> Nombre</Label>
        <TextField fx:id="nombre"></TextField>
    </HBox>
    <HBox alignment="CENTER"  spacing="6.0">
        <Label textFill="white">Password</Label>
        <PasswordField fx:id="password" ></PasswordField>

    </HBox>
    <Button alignment="CENTER_RIGHT" text="Login" onAction="#onLoginButtonClick"/>

</VBox>
